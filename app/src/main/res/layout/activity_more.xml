<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/more_app_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/account"
                android:background="@color/lightgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/more_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/profile"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:background="@drawable/more_selector"
                    android:textColor="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <TextView
                    android:id="@+id/more_my_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/my_trip"
                    android:background="@drawable/more_selector"
                    android:drawableLeft="@drawable/ic_explore_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:textColor="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <TextView
                    android:id="@+id/more_my_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/my_point"
                    android:background="@drawable/more_selector"
                    android:drawableLeft="@drawable/ic_card_giftcard_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:drawableTint="@color/darkgray"
                    android:textColor="@drawable/more_selector"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <TextView
                    android:id="@+id/more_promotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_selector"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/promotions"
                    android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:drawableTint="@color/darkgray"
                    android:textColor="@drawable/more_selector"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/setting"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/more_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/language"
                    android:drawableLeft="@drawable/ic_language_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_selector"
                    android:textSize="@dimen/largeText"
                    android:textColor="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <TextView
                    android:id="@+id/more_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/notifications"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:background="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:textColor="@drawable/more_selector"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/informations"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/more_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/contact_us"
                    android:drawableLeft="@drawable/ic_feedback_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textColor="@drawable/more_selector"
                    android:textSize="@dimen/largeText"
                    android:drawableTint="@color/darkgray"
                    android:background="@drawable/more_selector"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <TextView
                    android:id="@+id/more_about_us"
                    android:layout_width="match_parent"
                    android:textColor="@drawable/more_selector"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_selector"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/about_us"
                    android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                    android:drawableRight="@drawable/arrow_right_black"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/more_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/more_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />
    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>