<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app ="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tour_guide_img"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ac_unit_black_24dp"
                android:background="@drawable/bg_gradient"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tour_guide_nama"
                    android:layout_width="wrap_content"
                    android:text="Tour Guide A"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/largeText"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tour_guide_bio"
                    android:layout_width="match_parent"
                    android:lines="2"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginBottom="10dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"/>

                <RatingBar
                    android:id="@+id/tour_guide_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SmallGoldRatingBar"
                    android:progressTint="@color/star"
                    android:isIndicator="true"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
