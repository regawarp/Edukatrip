<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/notif_app_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/notif_daily"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/daily"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:background="@drawable/more_selector"
                    android:textColor="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SwitchTheme"
                    android:padding="@dimen/activity_vertical_margin"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/notif_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/messages"
                    android:background="@drawable/more_selector"
                    android:drawableLeft="@drawable/ic_feedback_black_24dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:textColor="@drawable/more_selector"
                    android:drawableTint="@color/darkgray"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:checked="true"
                    android:padding="@dimen/activity_vertical_margin"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/notif_deal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/deals_and_promotions"
                    android:background="@drawable/more_selector"
                    android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/largeText"
                    android:drawableTint="@color/darkgray"
                    android:textColor="@drawable/more_selector"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:padding="@dimen/activity_vertical_margin"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/notif_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/notif_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>