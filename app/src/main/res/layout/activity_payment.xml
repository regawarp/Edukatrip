<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/payment_txt_total"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"/>
            <TextView
                android:id="@+id/payment_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 100.000"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/payment_expand"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/orangeish"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/payment_expand"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/payment_total_price"
                app:layout_constraintBottom_toBottomOf="@id/payment_total_price"/>
            <TextView
                android:id="@+id/payment_txt_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/method"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_total"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Transfer"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_total"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/payment_txt_please"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_do"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/exlargeText"
                android:text="Wednesday, 25 Sep 2019 13.00 WIB"
                android:maxLines="2"
                android:textColor="@color/black"
                android:maxWidth="300dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_please"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/grey"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/payment_txt_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_to"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/payment_bank_image"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/bank_bri"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_transfer"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT.Edukatrip Cabang Bandung"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toBottomOf="@id/payment_bank_image"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_bank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="037 701 0006123456"
                android:textColor="@color/black"
                android:textSize="@dimen/largeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/payment_bank_image"
                app:layout_constraintBottom_toBottomOf="@id/payment_bank_image"/>
            <TextView
                android:id="@+id/payment_copy_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_account_number"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toBottomOf="@id/payment_bank_image"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/grey"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/payment_txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_to_transfer"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/smallText"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_amount"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/orangeish"
                android:textStyle="bold"
                android:text="Rp 100.123"
                android:textSize="@dimen/exlargeText"/>
            <TextView
                android:id="@+id/payment_txt_please_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_transfer"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toBottomOf="@id/payment_amount"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/payment_copy_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_amount"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toTopOf="@id/payment_txt_please_transfer"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/payment_txt_delayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/different_number"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/smallText"
                app:layout_constraintTop_toBottomOf="@id/payment_txt_please_transfer"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text_book_tour"
                android:text="@string/i_already_transfered"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>