<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_app_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:padding="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/profile_txt_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/activity_ex_margin">
                    <TextView
                        android:id="@+id/profile_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="@dimen/exlargeText"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/image_3"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_pp"
                        android:textAllCaps="false"
                        android:padding="@dimen/activity_vertical_margin"
                        android:background="@drawable/button_selector_gradient"
                        android:textColor="@drawable/button_selector_gradient"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/profile_txt_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textStyle="bold"
                    android:textSize="@dimen/largeText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_firstname"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_lastname"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doe"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_gender"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+62870055181"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_email"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Johndoe@gmail.com"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country"
                    android:textSize="@dimen/smallText"/>
                <TextView
                    android:id="@+id/profile_country"
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indonesia"/>
                <View
                    android:layout_marginTop="@dimen/activity_text_margin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@color/lightgrey">
                <TextView
                    android:id="@+id/profile_txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info"
                    android:textStyle="bold"
                    android:textSize="@dimen/largeText"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <TextView
                        android:id="@+id/profile_facebook"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook"/>
                    <TextView
                        android:id="@+id/profile_facebook_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_connected"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/profile_google"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/google"/>
                    <TextView
                        android:id="@+id/profile_google_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/connected"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@color/lightgrey">
                <TextView
                    android:id="@+id/profile_txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largeText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:id="@+id/profile_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/change_password"/>

                <TextView
                    android:id="@+id/profile_add_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_account"/>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey">
                <Button
                    android:id="@+id/profile_btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/blue_round_hollow"
                    android:layout_margin="@dimen/activity_ex_margin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>