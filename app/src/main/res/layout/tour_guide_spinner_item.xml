<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tour_spinner_ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tour_spinner_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/foto_pp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tour_spinner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tour Guide"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toEndOf="@id/tour_spinner_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>